---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary imagesgo
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/comp photos/painting (9).jpg";
import ACservice from "@images/comp photos/AC (6).jpg";
import wallpainting1 from "@images/comp photos/external painting (1).jpg";
import wallpainting2 from "@images/comp photos/painting (8).jpg";
import plumbing from "@images/comp photos/plumbing 2 - crop.jpg";
import handyman2 from "@images/comp photos/handyman 2.jpg";
import handyman from "@images/comp photos/handyman.jpg";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Home Renovation in Dubai",
    subTitle:
      "Transform your home to a new and elegant look by renovating your kitchen and bathroom. Repainting the walls with new colors, or changing the floor tiles",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: personWorking,
    imgTwoAlt: "Person doing wall painting",
  },
  {
    isRightSection: false,
    title: "AC Services and AC maintenance in Dubai",
    subTitle:
      "We can service your villa or apartment AC system. Replacing the parts or install a new AC system. This includes air conditioning filter cleaning for the apartments and villas. Replacement of thermostats.",
    img: ACservice,
    imgAlt: "men doing AC maintenance in Dubai",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Interior and Exterior wall and ceiling painting",
    subTitle:
      "Using the best available outdoor and indoor paints in Dubai, we paint exterior and interior walls and ceiling. It included repair of the damages, applying primer and then proceeding with painting. This service includes repair of all the wall damages due to fixtures and moisture. Then the wall will be painted as per the requirement",
    single: false,
    imgOne: wallpainting1,
    imgOneAlt: "man painting a wall in a villa",
    imgTwo: wallpainting2,
    imgTwoAlt: "man painting a wall in an apartment",
  },
  {
    isRightSection: false,
    title: "Plumbing and Basic Electrical Services",
    subTitle:
      "Our plumbing services includes leakage investigation, fixing issues due to smell in the apartment, repair of the toilet and mixers, as well as all the issues to drainage. We also replace water heaters. We can do basic electrical works such as repair and replacement of electrical switches and plugs, checking the distribution boards to replace electrical fuses.",
    img: plumbing,
    imgAlt:
      "two technisians replacing a toilet in a bathroom", 
  },
  {
    isRightSection: true,
    title: "Handyman Services",
    subTitle:
      "Handyman services includes fix lights and light bulbs, fixing fly screen, fixing mirrors, and pictures, tightening of kitchen cabinet door hinges, etc.",
    single: false,
    imgOne: handyman2,
    imgOneAlt: "a technician measure distance of the frame to the wall",
    imgTwo: handyman,
    imgTwoAlt: "two technicians fixing a light in bedroom",
    btnExists: true,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
const metaDescription =
  "Uniting expertise with your vision, Renotech Technical Services LLC provides exceptional service and comprehensive solutions in the Home maintenance and renovation, from consultation to project completion.";
const ogTitle = "Expert Consultation Services | Renotech Technocal Services LLC";
---


<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://dxbrenovations.ae/",
    "@type": "WebPage",
    "@id": "https://dxbrenovations.ae/services/",
    url: "https://dxbrenovations.ae/services/",
    name: "Home Maintenance and Renovation",
    description:
      "Uniting expertise with your vision, Renotech Technical Services LLC provides exceptional Home Maintenance and Home Renovation Services, from consultation to project completion.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://dxbrenovations.ae",
      name: "Renotech Technical Services LLC",
      description:
        "Renotech Technical Services LLC is one of the trusted home maintenance and renovation companies in Dubai",
    },
    inLanguage: "en-US",
  }}
>
  {/* MainSection is the introductory section of the page, it also contains a CTA button */}
  <MainSection
    title="Uniting Expertise with Your Vision"
    subTitle="At Renotech Technical Services LLC, we take pride in providing comprehensive solutions and exceptional service in the Home maintenance and Home Renovation industry. Our experienced team is dedicated to supporting your project from inception to completion with a range of specialized services."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="https://dxbrenovations.ae/contact/"
  />
  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/* FeaturesStats section showcases essential stats valuable to users */}
  <FeaturesStats
    title="Our Commitment"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At Renotech Technical Services LLC, we are dedicated to provide exceptional services to our client and exceed their expectation."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with Renotech Technical Services LLC as exceptional"
    
  />
</MainLayout>
