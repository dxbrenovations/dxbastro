---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/bathroom_renovation.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import featureImage from "@images/blueprints-image.avif";
import construction from "@images/construction-image.avif";
import design from "@images/blueprint-1.avif";
import projectManagement from "@images/person-working.avif";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <HeroSection
    title=`Transforming Spaces, <span
        class="text-yellow-500 dark:text-yellow-400">Building Dreams</span>`
    subTitle="Professional home renovations and bespoke office and retail fitouts."
    primaryBtn="Our Services"
    primaryBtnURL="/services"
    secondaryBtn="Get a Quote"
    secondaryBtnURL="/contact"
    src={heroImage}
    alt="A team of construction workers collaborating on a project."
  />

  <ClientsSection
    title="Trusted by Homeowners and Businesses"
    subTitle="Our commitment to quality and excellence has earned us the trust of a diverse clientele."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Your Vision, Expertly Executed"
    subTitle="We specialize in turning your renovation ideas into reality. From initial design to final touches, our team is dedicated to delivering exceptional results that reflect your style and meet your needs."
    src={featureImage}
    alt="Blueprints and design tools on a wooden table."
    features={features}
  />

  <TestimonialsSection
    title="What Our Clients Say"
    subTitle="We pride ourselves on the strong relationships we build with our clients. Here's what they have to say about their experience with us."
    testimonials={[
      {
        content:
          "The team completely transformed our outdated kitchen into a modern, functional space we love spending time in. Their attention to detail and craftsmanship were outstanding.",
        author: "The Johnson Family",
        role: "Homeowners",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
       {
        content:
          "They delivered our new retail space on time and on budget. The final result exceeded our expectations and has been a huge hit with our customers.",
        author: "Jane Doe",
        role: "Retail Store Owner",
        avatarSrc:
          "https://images.unsplash.com/photo-1494790108377-be9c29b29330?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "98%",
        description:
          "client satisfaction rate on completed projects",
      },
      {
        count: "500+",
        description:
          "successful home and commercial renovations",
      },
      {
        count: "10+",
        description:
          "years of experience in the construction industry",
      },
       {
        count: "100%",
        description: "of projects completed on time and on budget",
      },
    ]}
  />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Ready to start your project?"
    subTitle="Contact us today for a free, no-obligation consultation and quote."
    url="/contact"
  />
</MainLayout>
